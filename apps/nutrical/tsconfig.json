{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@backend/types": [
        "../backend/types"
      ]
    },
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "App.tsx",
    "src/**/*",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "references": [
    {
      "path": "../backend"
    }
  ]
}
