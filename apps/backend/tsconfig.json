{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "module": "Preserve",
    "composite": true,
    "declaration": true,
    "paths": {
      "@/db/*": ["./db/*"],
      "@/routes/*": ["./routes/*"],
      "@/utils/*": ["./utils/*"],
    },
    "outDir": "./dist",
    "baseUrl": ".",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"allowJs": true,
		"esModuleInterop": true,
		"isolatedModules": true,
  },
  "references": []
}
